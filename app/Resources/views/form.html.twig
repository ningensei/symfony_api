{% extends "base.html.twig" %}

{% block content %}
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    {{ current|capitalize }}
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-table"></i> {{ current|capitalize }}
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
            
        <div class="row">
            <div class="col-xs-12">
                <form role="form">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input class="form-control" placeholder="Ingresar nombre">
                    </div>
                    <div class="form-group">
                        <label>Cuit</label>
                        <input class="form-control" placeholder="Ingresar cuit">
                    </div>
                    <div class="form-group">
                        <label>Dirección</label>
                        <input class="form-control" placeholder="Ingresar dirección">
                    </div>
                </form>
            </div>

        </div>
        <!-- /.row -->

        <div class="text-center"><button type="button" class="btn btn-lg btn-primary">Guardar</button></div>
    </div>
    <!-- /.container-fluid -->
{% endblock %}